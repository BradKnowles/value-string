<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <Title>Value String</Title>
    <Product>Dawn Utils</Product>
    <Version>1.0.2</Version>
    <FileVersion>1.0.0</FileVersion>
    <CodeAnalysisRuleSet>../style/global.ruleset</CodeAnalysisRuleSet>
    <TreatWarningsAsErrors>true</TreatWarningsAsErrors>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
    <DocumentationFile>bin\Debug\netstandard2.0\ValueString.xml</DocumentationFile>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|AnyCPU'">
    <DocumentationFile>bin\Release\netstandard2.0\ValueString.xml</DocumentationFile>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="StyleCop.Analyzers" Version="1.0.2" />
    <AdditionalFiles Include="../style/stylecop.json" />
  </ItemGroup>

  <PropertyGroup>
    <PackageId>Dawn.ValueString</PackageId>
    <Authors>Şafak Gür</Authors>
    <Description>ValueString struct allows you to encapsulate a string and parse it to any type using the existing parsing conventions. It is intended to be used for convenience when there is a need to initialize typed instances from culture-neutral (invariant) strings.</Description>
    <PackageLicenseUrl>https://opensource.org/licenses/MIT</PackageLicenseUrl>
    <PackageProjectUrl>https://github.com/safakgur/value-string</PackageProjectUrl>
    <Copyright>Copyright © 2016 Şafak Gür</Copyright>
    <PackageTags>string parse</PackageTags>
    <PackageReleaseNotes>Convert project to .NET Standard 2.0.</PackageReleaseNotes>
    <RepositoryUrl>https://github.com/safakgur/value-string</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
  </PropertyGroup>

</Project>
